<div
  class="
    collection-list-grid
    collection-list-grid--mobile-per-view-{{ section.settings.mobile_columns }}
    collection-list-grid--per-view-{{ section.settings.columns }}
    section
    section--divider-{{ section.settings.divider_style }}
    {{ section.settings.section_padding }}
    {% if settings.enable_section_animations and section.settings.enable_animation %}
      animation
      animation--collection-list-grid
    {% endif %}
  "
  data-section-id="{{ section.id }}"
  data-section-type="collection-list-grid"
  data-collection-columns="{{ section.settings.columns }}"
  data-mobile-collection-columns="{{ section.settings.mobile_columns }}"
>
  <div class="collection-list-grid__inner">
    <div class="section-introduction animation--section-introduction">
      {%- unless section.settings.heading == blank -%}
        <{{ section.settings.heading_tag }} class="collection-list-grid__heading ff-heading fs-heading-3-base section-introduction__heading">
          {{ section.settings.heading }}
        </{{ section.settings.heading_tag }}>
      {%- endunless -%}
      {%- unless section.settings.subheading == blank -%}
        <div class="collection-list-grid__subheading ff-body fs-body-100 rte section-introduction__subheading">
          {{ section.settings.subheading }}
        </div>
      {%- endunless -%}

      {%-
        render 'button-block' with
        wrapper_class: "collection-list-grid__button section-introduction__button",
        link: section.settings.link,
        label: section.settings.link_text,
        button_style: 'btn--callout',
      -%}
    </div>

    <div class="collection-list-grid__collections section-blocks__content">
      {% for block in section.blocks %}
        {% capture collection_label %}
  <div class="collection-item__label index-colelction-item_label">
       <a href="{{block.settings.colelction_link }}">
    <h4 class="collection-item__title fs-body-100 {% if label_is_overlay %}ff-heading{% else %}ff-body{% endif %}">
     
       {{ block.settings.heading }}
      
    </h4>
         <p>{{ block.settings.text }}</p>
         </a>
  </div>
{% endcapture %}

        <div
          class="
            collection-item
            animation--item
              index-collection-item
          "
        >
          {%- capture wrapping_tag -%}
    {%- if include_placeholder -%}div{%- else -%}a{%- endif -%}
  {%- endcapture -%}
          {%- capture wrapping_attributes -%}
    {%- unless include_placeholder -%}href="{{block.settings.colelction_link }}" aria-label="{{ collection.title }}"{%- endunless -%}
  {%- endcapture -%}
          <{{ wrapping_tag }}
            {{ wrapping_attributes }}
            class="collection-item__image-wrapper hover"
          >
            {%
              render 'image' with
              image: block.settings.image,
              wrapper_class: 'collection-item__image',
              aspect_ratio: aspect_ratio,
              placeholder_name: 'collection-1',
              include_placeholder: true,
              sizes: image_sizes,
              src_set_type: "grid"
            %}

            {%- if label_is_overlay -%}
              {{ block.settings.heading }}
            {%- endif -%}
          </{{ wrapping_tag }}>

          {%- unless label_is_overlay -%}
            {{ collection_label }}
          {%- endunless -%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
    .index-collection-item{
      position:relative;
    }
     .collection-list-grid .collection-item__image-wrapper{
    position:relative;
       z-index:5;
       cursor:pointer;
  }
  .collection-list-grid   .collection-item__label{
    z-index:6;
         cursor:pointer;
    
  }
    .collection-list-grid   .collection-item__label a {
      display:block;
    }
    .index-colelction-item_label{
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 100px 16px 12px;
      color:#fff;
  background: linear-gradient(0deg, rgba(13, 15, 21, 0.6) 29.98%, rgba(13, 15, 21, 0) 100%);
    }
      .index-colelction-item_label h4{
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 600;
  font-size: 20px;
  line-height: 28px;

      }
        .index-colelction-item_label p{
  font-weight: 400;
  font-size: 16px;
  line-height: 26px;

        }
    @media (max-width:480px){
      .index-colelction-item_label p{
  font-size: 12px;
  font-weight: 400;
  line-height: 20px;
      }
      .index-colelction-item_label h4{
  font-size: 14px;
  font-weight: 600;
  line-height: 22px;

      }
    }
</style>

