{% assign paginate_by = 10 %}
{% if section.settings.display_option == 'slider' %}
  <section class="section-blog-post">
  <div class="section">
    <div class="section-blog-title">
      <h2 class="ff-heading fs-heading-3-base section-introduction__heading">{{ section.settings.title }}</h2>
    </div>
    {%- assign blog = blogs[section.settings.blog] -%}
    {% paginate blog.articles by paginate_by %}
      <div class="section-blog-inner">
        <div class="slick-slider">
          {%- for article in blog.articles -%}
            <div class="slick-slide">
              <div class="section-blog-first-detail">
                <div class="section-blog-first-info">
                  <div class="section-blog-image">
                    <a href="{{ article.url }}">
                      <img src="{{ article.image | img_url:'master' }}" alt="{{ article.title }}">
                    </a>
                  </div>
                  <div class="section-blog-detail">
                    <div class="section-blog-info">
                      <a href="{{ article.url }}">
                        <h3>{{ article.title }}</h3>
                      </a>
                      <p>{{ article.published_at | time_tag: format: 'date' }}</p>
                    </div>
                    <div class="section-blog-icon">
                      <a href="{{ article.url }}">
                        <svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M2 18.3334L19.3333 1M19.3333 1V17.6401M19.3333 1H2.69333" stroke="white" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="blog__pagination animation animation--blog-pagination">
        {% if paginate.pages > 1 %}
          {% render 'pagination', paginate: paginate, type: 'general.pagination.blog_posts' %}
        {% endif %}
      </div>
    {% endpaginate %}
  </div>
</section>

{% else %}
<section class="section-blog-post">
  <div class="section">
    <div class="section-blog-title">
      <h2 class=" ff-heading fs-heading-3-base section-introduction__heading">{{ section.settings.title }}</h2>
    </div>
    {%- assign blog = blogs[section.settings.blog] -%}
    {% paginate blog.articles by paginate_by %}
      <div class="section-blog-inner">
        <div class="section-blog-first">
          {%- for article in blog.articles limit: 2 -%}
            <div class="section-blog-first-detail">
              <div class="section-blog-first-info">
                <div class="section-blog-image">
                  <a href="{{ article.url }}"
                    ><img src="{{ article.image | img_url:'master' }}" alt="{{ article.title }}"
                  ></a>
                </div>
                <div class="section-blog-detail">
                  <div class="section-blog-info">
                    <a href="{{ article.url }}">section-blog-title
                      <h3>{{ article.title }}</h3>
                    </a>
                    <p>{{ article.published_at | time_tag: format: 'date' }}</p>
                  </div>
                  <div class="section-blog-icon">
                    <a href="{{ article.url }}">
                      <svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 18.3334L19.3333 1M19.3333 1V17.6401M19.3333 1H2.69333" stroke="white" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="section-blog-post-second">
        {%- for article in blog.articles offset: 2 -%}
          <div class="section-blog-post-second-detail">
            <div class="section-second-inner">
              <div class="section-blog-second-image">
                <a href="{{ article.url }}">
                  <img src="{{ article.image | img_url:'master' }}" alt="{{ article.title }}"
                ></a>
              </div>
              <div class="section-blog-second-info flex-grow">
                <a href="{{ article.url }}">
                  <h3>{{ article.title }}</h3>
                </a>
              </div>
              <p class="section-blog-date">{{ article.published_at | time_tag: format: 'date' }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="blog__pagination animation animation--blog-pagination">
        {% if paginate.pages > 1 %}
          {% render 'pagination', paginate: paginate, type: 'general.pagination.blog_posts' %}
        {% endif %}
      </div>
    {% endpaginate %}
  </div>
</section>
{% endif %}
<style>
