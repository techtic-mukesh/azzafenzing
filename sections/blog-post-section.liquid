      "type":"text",
      "id":"title",
      "label":"Title",
      "default":"Blog"
    },
    {
      "id": "blog",
      "type": "blog",
      "label": "Blog"
    },
    {
      "type": "select",
      "id": "display_option",
      "label": "Choose Display Option",
      "options": [
        {
          "value": "slider",
          "label": "Slider"
        },
        {
          "value": "default",
          "label": "Default"
        }
      ],
      "default": "default"
    }
  ],
  "presets": [
    {
      "name": "Blog- Post-Section"
    }
  ]
}
{% endschema %}
