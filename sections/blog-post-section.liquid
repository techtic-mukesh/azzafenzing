    }
    .section-blog-first{
      display:flex;
      flex-wrap:wrap;
      margin-bottom:50px;
    }
    .section-blog-first-detail{
      width:100%;
      padding:0 10px;

    }
    .section-blog-first-info{
       position:relative;
      height:100%;
    }
    .section-blog-second{
      display:flex;
      height:max-content;
    }
    .section-blog-detail{
      display:flex;
      position: absolute;
      bottom: 4%;
      left: 0;
      padding: 15px;
      color: #fff;
    }
    .section-blog-info{
      width:90%;
    }
    .section-blog-icon{
      width:10%;
          text-align: center;
    }
    .section-blog-image {
      height: 100%;
    }
    .section-blog-image img{
      width:100%;
       height: 100%;
      aspect-ratio:16/9;
      object-fit:cover;

    }
    .section-blog-info h3{
      color:#FFF;
      font-size: 20px;
      font-weight: 600;
      line-height: 28px;
          margin-bottom: 5px;
    }
    .section-blog-info p{
      font-size: 16px;
      line-height: 26px;
    }

    .section-blog-icon svg{
      width:17px;
      height:17px;
    }
    .section-blog-second-detail{
      width:50%;
      padding:0 10px;
      display:flex;
    }
    .section-second-inner{
       display:flex;
      flex-direction:column;
    }
    .section-blog-second-info h3{
      font-size: 16px;
      font-weight: 600;
      line-height: 26px;
          margin-bottom: 15px;
    }
    .section-blog-date{
          font-size: 14px;
      line-height: 22px;
    }
    .section-blog-second-image{
      position: relative;
      overflow: hidden;
      padding-top: 70%;
      margin-bottom:20px;
    }
    .section-blog-second-image img{
          width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      object-fit: cover;
    }
    .flex-grow{
      flex:1 0 auto;
    }

       .section-blog-post-second{
     display:flex;
     flex-wrap:wrap;
       margin-top: 30px;
   }
    .section-blog-post-second-detail{
      width:25%;
      padding:0 10px;
      display:flex;
      margin-bottom:40px;
    }
     @media (min-width:992px) and (max-width:1199px){
      .section-blog-info {
      width: 85%;
      }
      .section-blog-icon {
        width: 15%;
      }
    }
  @media (min-width:768px) and (max-width:991px){
    .section-blog-info {
      width: 85%;
      }
      .section-blog-icon {
        width: 15%;
      }
       .section-blog-info h3 {
      font-size: 18px;
      line-height: 26px;
    }
    .section-blog-second-info h3 {
      font-size: 15px;
      line-height: 25px;
    }
    .section-blog-post-second-detail {
      width: 33%;
    }
  }
  @media (max-width:767px){
  .section-blog-first {
      margin-bottom: 0;
  }
    .section-blog-first-detail {
      width: 100%;
      padding: 0;
      margin-bottom:20px;
    }
    .section-blog-post-second-detail {
      width: 100%;
      padding: 0;
       margin-bottom:20px;
    }
    .section-blog-post-second {
      margin-top: 0;
  }
    .section-blog-post .section{
      padding-top:0;
    }
    .section-blog-info h3{
    font-size: 16px;
      line-height: 24px;
  }
    .section-blog-info p {
      font-size: 14px;
      line-height: 24px;
  }
    .section-blog-second-info h3 {
      font-size: 14px;
      line-height: 24px;
      margin-bottom: 10px;
  }
  }
  .slick-slider
  {
    display:flex !important;
  }
</style>
<script type="text/javascript">
$(document).ready(function(){
  $('.slick-slider').slick({
    dots: false,
    infinite: true,
    speed: 300,
    slidesToShow: 2,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 3000,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1
        }
      }
    ]
  });
});

</script>

