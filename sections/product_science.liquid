<style>
       .product_science .product_science_section_val,
        .product_science .product_science_second_va1{
          display: flex;
      }
        .product_science_section_val {
          padding: 0 50px;
          max-width: 100%;
          margin: 0 auto;
      }
        .product_science_first {
          width: 50.5%;
          margin-top: -30px;
          z-index: 1;
      }
        .product_science_second {
          width: 49.5%;
      }
        .product_science_second_1 {
          width: 20%;
          line-height: 0;
          margin-top: 5px;
      }
        .product_science_second_1 img{line-height: 0;}
        .product_science_second_2{width: 80%;padding-left: 28px;}
        h2.product_science_title {
          font-size: 32px;
          line-height: 40px;
          letter-spacing: .02em;
          font-family: 'Aileron-Bold';
          text-align: center;
          margin:0 auto  11px auto;
          position:relative;
          z-index:2;
      }
        .product_science_details_page {
          padding: 200px 0 ;
      }
        .science-text__heading {
          font-family: 'Aileron-Bold';
          font-weight: 700;
          font-size: 18px;
          line-height: 25.2px;
          letter-spacing: 0.02em;
          color: #000000;
      }
       .product_science_second_2 p {
          font-family: 'Aileron-Regular';
          font-weight: 400;
          font-size: 16px;
          line-height: 22.4px;
          color: #000000;
         margin: 18px 0 0 0;
      }
        .product_science_second_va1 {
          border-bottom: 1px solid #E6E6E6;
      }
         .product_science_second_va1:last-child {
          border-bottom: none;
      }
        .product_science_second_va1 {
          padding: 40px 0 64px 0;
          align-items: flex-start;
      }
        .product_science_second_2 p br{
          display: block;
          content: '';
          margin-top: 9px;
        }
        .template-product .product_science a{
        color: #000;
        background-color: #fff;
        border: 1px solid #000;
        padding: 0 23px;
        font-size: 18px;
        letter-spacing: 0;
        margin-top: 36px;
        border-radius: 24px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
          min-height:47px;
        }
      .template-product .product_science a:hover{
      background-color: #f3f3f3;
    }
      .template-product .product_science a:active{
      background-color: #e8e8e8;
    }

        .template-product .product_science a{
          font-weight: 600;
          font-size: 18px;
          line-height: 23.13px;
        }
  .text-center {
   text-align:center;
  }

  .product_science_second_1 img{
    width:auto;
    height:auto;
    max-width:100%;
  }
        @media(max-width:1199px){
          .product_science_details_page { padding: 150px 0;}
          h2.product_science_title{margin: 0 auto;}
          .product_science_second {  width: 55%;}
          .product_science_first { width: 45%;  margin-top: 0; z-index: 1;}
          .product_science_second_va1 { padding: 30px 0;}
          .product_science_second_2 p{margin-top: 8px;}
          .product_science_second_2 p br { margin-top: 4px;}
          .template-product .product_science a{margin-top: 15px;}
          .product_science_second_1 {width: 25%;}
          .product_science_second_2 { width: 75%; padding-left: 15px;}
        }
        @media(max-width: 991px){
          .product_science_details_page { padding: 100px 0;}
          .product_science_section_val { padding: 0 20px;}
          .product_science .product_science_section_val {  display: block; }
          .product_science_first,
          .product_science_second{
          width: 100%; }
         .product_science_second_1 { width: 18%;}
          .product_science_second_2 { width: 83%; padding-left: 28px;}
          .product_science_second_2 p br { margin-top: 6px; }
          .product_science_second_va1 { padding: 30px 0 70px 0; }
          .template-product .product_science a{margin-top: 0;}
          .product_science_second_va1:last-child{padding-bottom: 46px;}
          .product_science_second_2 p { margin-top: 18px;}
          .product_science_second {padding-top: 72px;}
        }
        @media(max-width:749px){
          .product_science_section_val {padding: 0;}
          .product_science_details_page { padding: 100px 0;}
          h2.product_science_title { font-size: 28px; line-height: 35px;margin-bottom: 10px;}
          .product_science_second{padding: 0 11px;}
          .product_science .center { padding: 0 17px;}
          .product_science .product_science_second_va1 {display: block;}
          .product_science_second_1 { width: 100%;max-width:127px;}
          .product_science_second_2{width:100%;padding-left: 0 ;}
          .product_science_second_1 { margin: 0 auto; text-align: center; }
          h3.science-text__heading { text-align: center; margin: 20px 0; }
          .product_science_second_2 p { margin-top: 0; text-align: center; font-size: 15px; line-height: 21px;}
          .product_science_second_va1 { padding: 25px 0; }
          .product_science_second_va1:last-child { padding-bottom: 63px; }
          .product_science .product_science_second_va1:first-child{padding-top: 40px;}
        }
</style>
<div class="product_science_details_page">
  <h2 class="product_science_title">{{ section.settings.heading_1 }}</h2>
  <div>
    <div class="product_science_section_val">
      <div class="product_science_first">
        {%- capture image_sizes -%}
            (min-width: 720px) calc(calc(50vw - clamp(18px, 3.3vw, 3.3vw)), calc(100vw - 80px)
        {%- endcapture -%}
        {%- liquid
          assign prioritize_loading = false
          if section.index == 1
            assign prioritize_loading = true
          endif
          assign placeholder_aspect_ratio = 'square'
        -%}
        {% if section.settings.desktop_image != blank %}
          <div class="desktop_image">
            {%- render 'image',
              wrapper_class: 'lazyload',
              image: section.settings.desktop_image,
              sizes: image_sizes,
              animate: true,
              include_placeholder: true,
              animate: true,
              prioritize_loading: prioritize_loading,
              placeholder_natural_fallback_ratio: placeholder_aspect_ratio,
              placeholder_name: 'lifestyle-2'
            -%}
          </div>
        {% endif %}
        {% if section.settings.tab_image != blank %}
          <div class="tab_image">
            {%- render 'image',
              wrapper_class: 'lazyload',
              image: section.settings.tab_image,
              sizes: image_sizes,
              animate: true,
              include_placeholder: true,
              animate: true,
              prioritize_loading: prioritize_loading
            -%}
          </div>
        {% endif %}
        {% if section.settings.mobile_image != blank %}
          <div class="mobile_image">
            {%- render 'image',
              wrapper_class: 'lazyload',
              image: section.settings.mobile_image,
              sizes: image_sizes,
              animate: true,
              include_placeholder: true,
              animate: true,
              prioritize_loading: prioritize_loading
            -%}
          </div>
        {% endif %}
      </div>

      <div class="product_science_second">
        {%- for block in section.blocks -%}
          <div class="product_science_second_va1">
            <div class="product_science_second_1">
              {% if block.settings.image_science != blank %}
                {%- render 'image',
                  wrapper_class: 'lazyload',
                  image: block.settings.image_science,
                  sizes: image_sizes,
                  animate: true,
                  include_placeholder: true,
                  animate: true,
                  prioritize_loading: prioritize_loading
                -%}
              {% endif %}
            </div>
            <div class="product_science_second_2">
              <h3 class="science-text__heading ">{{ block.settings.heading | escape }}</h3>
              {{ block.settings.textarea }}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
    <div class="text-center">
      <a href="{{ section.settings.button_link }}" class="product_science_link button button--primary ">
        {{- section.settings.button_label -}}
      </a>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "product science",
  "class": "product_science",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "title"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "desktop_image"
    },
    {
      "type": "image_picker",
      "id": "tab_image",
      "label": "tab_image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "mobile_image"
    },
     {
      "type": "text",
      "id": "button_label",
      "label": "button_label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "button_link"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "science",
        "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "title"
        },

           {
          "type": "richtext",
          "id": "textarea",
          "label": "details"
        },
         {
      "type": "image_picker",
      "id": "image_science",
      "label": "image"
        }

      ]
    }

  ],
  "presets": [
    {
      "name": "product science",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}
