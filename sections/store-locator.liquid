<style>
    /* General container for the section */
    .store-locator-container {
        width: 100%;
        max-width: 1140px;
        margin: 0 auto;
        padding: 0 15px;
        color: #231F20;
    }

    .store-locator-main-title {
        font-size: 24px;
        font-weight: bold;
        margin: 0;
    }

    /* Store list and details */
    .store-locator-details {
        margin-top: 30px;
    }

    .store-list {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .store-item {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .store-title {
        font-size: 22px;
        font-weight: 600;
    }

    .store-detail {
        padding: 16px;
        border-bottom: 1px solid #E2E2E2;
    }

    .store-name {
        margin: 0;
        font-weight: 600;
        font-size: 18px;
    }

    .store-info {
        margin-top: 8px;
        font-size: 14px;
        color: #6A6A6A;
    }

    .store-description,
    .store-hours {
        margin: 0;
    }

    .store-link {
        text-decoration: underline;
        color: inherit;
        font-weight: 600;
        text-transform: uppercase;
        display: block;
        margin-top: 8px;
    }

    /* Custom Button Styling */
    .custom-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        border: none;
        outline: none;
        min-width: 118px;
        max-width: 100%;
        width: 100%;
        height: 56px;
        padding: 18px 15px;
        text-transform: uppercase;
        background-color: #E81F25;
        color: #fff;
        font-weight: 600;
    }

    /* Custom Form Control Styles */
    .form-control-container {
        position: relative;
        display: flex;
        align-items: center;
        box-sizing: border-box;
        color: #6A6A6A;
    }

    .form-control-container .icon {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px 15px;
        background: transparent;
        pointer-events: none;
        border-left: 1px solid #E2E2E2;
        position: absolute;
        top: 50%;
        right: 2px;
        transform: translateY(-50%);
        color: #231F20;
        font-size: 22px;
    }

    .custom-control {
        position: relative;
        display: flex;
        align-items: center;
        border: 1px solid #E2E2E2;
        width: 100%;
        padding: 16px;
        outline: none;
        appearance: none;
        color: inherit;
    }

    select.custom-control {
        cursor: pointer;
    }
</style>


